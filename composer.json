{
	"name": "apigen/apigen",
	"description": "PHP source code API generator",
	"keywords": ["documentation", "phpdoc", "generator", "api"],
	"homepage": "http://apigen.org/",
	"license": "MIT",
	"authors": [
		{ "name": "Tomáš Votruba", "email": "tomas.vot@gmail.com" },
		{ "name": "Jaroslav Hanslík", "homepage": "https://github.com/kukulich" },
		{ "name": "Ondřej Nešpor", "homepage": "https://github.com/andrewsville" },
		{ "name": "David Grudl",  "homepage": "http://davidgrudl.com" }
	],
	"require": {
		"php": ">=5.5",
		"nette/bootstrap": "~2.3",
		"nette/di": "~2.3",
		"nette/neon": "~2.3",
		"nette/reflection": "~2.3",
		"latte/latte": "~2.3",
		"tracy/tracy": "~2.3",

		"kukulich/fshl": "~2.1",
		"michelf/php-markdown": "~1.4",

		"apigen/configuration": "0.1.*",
		"apigen/console": "0.1.*",
		"apigen/event-dispatcher": "0.1.*",
		"apigen/parser": "0.1.*",
		"apigen/theme": "0.1.*",
		"apigen/theme-default": "~2.0",
		"apigen/theme-bootstrap": "~1.1",
		"apigen/utils": "0.1.*",
		"nikic/php-parser": "~1.2",
		"league/commonmark": "0.7.*",
		"gherkins/regexpbuilderphp": "0.7.*"
	},
	"require-dev": {
		"mockery/mockery": "0.9.*",
		"herrera-io/box": "~1.6"
	},
	"autoload": {
		"psr-4": {
			"ApiGen\\": "src"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"ApiGen\\Tests\\": "tests",
			"ApiGen\\Latte\\Tests\\": "tests/Latte",
			"ApiGen\\Templating\\Tests\\": "tests/Templating",
			"ApiGen\\Routing\\Tests\\": "tests/Routing"
		}
	},
	"bin": [
		"bin/apigen"
	],
	"extra": {
		"branch-alias": {
			"dev-master": "4.2.0-dev"
		}
	}
}
